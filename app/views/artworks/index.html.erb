<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(<%= asset_path 'banner.jpg'%>)">
	<h1>Art'BNB</h1>
	<h3>Rent your art</h3>
</div>

	<div class="info-container d-flex bd-highlight">
		<div class="p-2 flex-grow-1 bd-highlight">
			<%= form_tag artworks_path, method: :get do %>
			<%= text_field_tag :query,
				params[:query],
				class: "form-control",
				placeholder: "Find an artwork"
			%>
		</div>

		<div class="p-2 bd-highlight">
		<%= submit_tag "Search", class: "btn btn-primary" %>
		<% end %>
		</div>
	</div>

<div class="container">
	<div class="col-12 d-flex">
		<div class="col-8">
			<div class="artworks row">
				<% @artworks.each do |artwork| %>
					<div class="col-4">
						<%= link_to artwork_path(artwork), class: "" do %>
							<div class="card_artwork">
								<% if artwork.photo.attached? %>
									<%= cl_image_tag artwork.photo.key, crop: :fill%>
								<% else %>
					    		 <%= image_tag "filler_picture.jpg", alt: "alttext" %>
					  		<% end %>
					  		<div class="text-center">
								<p id="title"><%= artwork.title %></p>
								<p id="price"><%= artwork.price %> â‚¬/day</p>
								</div>
							</div>
						<% end %>
						</div>
					<% end %>
			</div>		
		</div>
		<div class="col-4 p-0">
			<div id="map"
			     style="width: 100%; height: 600px;"
			     data-markers="<%= @markers.to_json %>"
			     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
			</div>
		</div>	
	</div>
</div>

<h1>Add an artwork</h1>

<div class="container">
  <%= simple_form_for [ @artwork ] do |f| %>
    <%= f.input :title %>
    <%= f.input :photo, as: :file %>
    <%= f.input :description %>
    <%= f.input :dimension %>
    <%= f.input :price %>
<!--     On va chercher la constante dans le modÃ¨le -->
    <%= f.input :category, collection: Artwork::CATEGORY, prompt: "Pick one from list", crop: :fill%>    
    <%= f.submit "Add the artwork", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to 'Back', artworks_path %>
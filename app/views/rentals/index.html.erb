<div class="main_container">
  <h1 class="title"> Hello <%= @user.name %>, these are your rentals! </h1>

  <% @user.rentals.each do |rental| %>
    <div class="card-trip">
      <% if  rental.artwork.photo.attached? %>
        <%= cl_image_tag rental.artwork.photo.key, alt: "alttext" %>
      <% else %>
        <%= image_tag "filler_picture.jpg", alt: "alttext" %>
      <% end %>
  <div class="card-trip-infos">
    <div class="text_design">
      <h2><%= rental.artwork.title %></h2>
     <p class="description"><%= rental.artwork.description %></p>
    </div>
    <h2 class="card-trip-pricing"><%= rental.artwork.price %> $ </h2>
  </div>
  <div class="div_btn">
        <%= link_to "modify", "rentals#edit", class: "btn" %>
        <%= link_to "cancel", "rentals#destroy", class: "btn" %>
  </div>

   <% if  rental.status == "Accepted" %>
    <p><strong>Your reservation has been accepted!</strong></p>
    <% end %>
    <% if rental.status == "Declined" %>
    <p><strong>Your reservation has been declined!</strong></p>
    <% end %>
    <% if  rental.status == "Pending" %>
   <p><strong>Waiting for the response from the artwork owner!</strong></p>
   <% end %>


  </div>

 <% end %>




<h1 class="title"> <%= @user.name %>, these are your reservations! </h1>
<div class="cards">

<% @user.owner_rentals.each do |rental| %>
  <div class="card-trip">
<p><%=rental.status %></p>
<%= link_to "Accept", accept_rentals_rental_path(rental), class:"btn btn-success", method: :patch, remote: true%>
<%= link_to "Decline", decline_rentals_rental_path(rental), class:"btn btn-danger", method: :patch, remote: true %>

</div>
<% end %>
</div>
